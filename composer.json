{
  "name": "movabletype/mt-framework",
  "description": "Movable Type Framework - A robust PHP-based blogging and content management platform",
  "type": "project",
  "license": "GPL-2.0+",
  "authors": [
    {
      "name": "Movable Type Team",
      "email": "team@movabletype.com"
    }
  ],
  "require": {
    "php": "^8.0",
    "slim/slim": "^4.12",
    "slim/psr7": "^1.6",
    "doctrine/dbal": "^3.5",
    "monolog/monolog": "^2.9",
    "vlucas/phpdotenv": "^5.4"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0",
    "phpstan/phpstan": "^1.10",
    "squizlabs/php_codesniffer": "^3.7"
  },
  "autoload": {
    "psr-4": {
      "MT\\": "src/",
      "MT\\Core\\": "src/core/",
      "MT\\Modules\\": "src/modules/",
      "MT\\Plugins\\": "src/plugins/",
      "MT\\Themes\\": "src/themes/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "lint": "phpcs --standard=PSR12 src/",
    "lint-fix": "phpcbf --standard=PSR12 src/",
    "analyze": "phpstan analyse src/"
  }
}
